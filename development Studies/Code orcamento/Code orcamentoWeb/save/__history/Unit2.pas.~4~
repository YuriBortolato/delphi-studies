unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls;

type
  TFrmDesconto = class(TForm)
    Label1: TLabel;
    edtValorAtual: TEdit;
    Label2: TLabel;
    edtDesconto: TEdit;
    lblResumo: TLabel;
    lblValorFinal: TLabel;
    pnlConfirmar: TPanel;
    pnlCancelar: TPanel;
    procedure pnlConfirmarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FrmDesconto: TFrmDesconto;

implementation

{$R *.dfm}

// Clique no Painel AZUL (Confirmar)
procedure TFrmDesconto.pnlConfirmarClick(Sender: TObject);
begin
  // Isso diz para o formulário: "Deu tudo certo, pode fechar!"
  ModalResult := mrOk;
end;

// Clique no Painel VERMELHO (Cancelar)
procedure TFrmDesconto.pnlCancelarClick(Sender: TObject);
begin
  // Isso diz: "Cancela tudo e fecha!"
  ModalResult := mrCancel;
end;

end.
